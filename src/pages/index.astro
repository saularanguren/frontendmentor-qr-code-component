---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import image_qr_code from '../assets/image-qr-code.png';
---

<Layout title="Frontend Mentor | QR code component">

	<Card 
		title="Improve your front-end skills by building projects"
		description="Scan the QR code to visit Frontend Mentor and take your coding skills to the next level"
		img={image_qr_code.src}
		alt="qr code image."
	/>

</Layout>